<a class="c-link {{ modifier_class }} {{ c_link_classes }}" href="{{ c_link_url }}"
	{% if c_link_target_attr %}
		target="{{ c_link_target_attr }}"
	{% endif %}
	{% if c_link_rel_attr %}
		rel="{{ c_link_rel_attr }}"
	{% endif %}
	{% if c_link_aria_label_attr %}
		aria-label="{{ c_link_aria_label_attr }}"
	{% endif %}	
	{% if c_link_role %}
		aria-role="{{ c_link_role }}"
	{% endif %}
	{% if c_link_aria_haspopup_attr %}
		aria-haspopup="{{ c_link_aria_haspopup_attr }}"
	{% endif %}
>
	{{ c_link_text }}
</a>
